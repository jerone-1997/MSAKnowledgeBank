<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnMSA"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:layout_below="@+id/imgLogo"
        android:layout_centerVertical="false"
        android:layout_marginTop="5dp"
        android:background="#6495ED "
        android:drawableTop="@drawable/tools_small"
        android:fontFamily="@font/ios_bold"
        android:text="MSA Knowledge Centre"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnExit"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:layout_alignParentBottom="false"
        android:layout_below="@+id/btnMSA"
        android:layout_marginTop="25dp"
        android:background="#FF6961"
        android:drawableTop="@drawable/exit_small_medium"
        android:fontFamily="@font/ios_bold"
        android:text="Exit"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/msa_logo" />
</RelativeLayout>